{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>This is the About Page</h1>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        Not know your IP address. Visit the <a href="/">Home Page</a> to set it.
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}